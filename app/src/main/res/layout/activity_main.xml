<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flowlayout.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentColor="#35e416"
        app:contentSize="10sp"></com.flowlayout.widget.SearchView>

    <com.flowlayout.widget.FlowLayout
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchView"
        android:layout_marginTop="30dp"
        android:accessibilityTraversalBefore="@id/searchView"
        app:space="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFF0000"
            android:padding="10dp"
            android:text="鸡你太美"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFF0000"
            android:padding="10dp"
            android:text="蔡徐坤"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFF0000"
            android:padding="10dp"
            android:text="美国校队"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFF0000"
            android:padding="10dp"
            android:text="打篮球"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFF0000"
            android:padding="10dp"
            android:text="偶像练习生"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFF0000"
            android:padding="10dp"
            android:text="练习时长两点半"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

    </com.flowlayout.widget.FlowLayout>

</LinearLayout>